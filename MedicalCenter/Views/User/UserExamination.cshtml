@model ShowAllUserExaminationViewModel

@section Styles {
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/adminlte.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&amp;display=fallback">
}

    <div class="offset-lg-4 offset-sm-4 col-lg-4 col-sm-4">
        <div class="small-box bg-warning" style="height:120px;">
            <div class="row">
                <div class="col-8">
                    <div class="inner">
                        <h3 class="text-center" style="padding-top:10px;">@Model.TotalExaminationCount</h3>
                        <p class="text-center" style="font-size:14px;padding-left:5px;">@ViewData["Title"]</p>
                    </div>
                </div>
                <div class="col-4" style="position:center;padding-top:15px;">
                    <div class="icon">
                        <i class="fa fa-hourglass"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalExaminationCount /
        ShowAllUserExaminationViewModel.ExaminationsPerPage);
}

<table class="table table-hover" style="font-size:16px;">
    <thead class="table">
        <tr>
            <th scope="col">Дата</th>
            <th scope="col">Час</th>
            <th scope="col" class="text-center">Доктор</th>
            <th scope="col" class="text-center">Специалист</th>
            <th scope="col" class="text-center">Телефон</th>
            <th scope="col" class="text-center">Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var examination in Model.Examinations)
        {
            <partial name="_ExaminationUserPartial" model="@examination" />
        }
    </tbody>
</table>

<div class="row mt-2 col-12">
    <div class="col-lg-2 col-sm-2">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="User"
           asp-action="UserExamination"
           asp-route-currentPage="@previousPage">Previous</a>
    </div>
        @{
            var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
            !Model.Examinations.Any();
        }
        <div class="offset-lg-9 offset-sm-9 col-lg-1 col-sm-1">
            <a class="btn btn-primary @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
               asp-controller="User"
               asp-action="UserExamination"
               asp-route-currentPage="@(Model.CurrentPage+1)">Next</a>
        </div>
</div>

@section Scripts {
    <script>
        function myConfirm(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Желаете ли да изтриете прегледа?',
                text: "Действието не може да бъде върнато",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Да, изтрий!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Изтрит!',
                        'Изтрихте преглед.',
                        'success'
                    ).then((resultDeleted) => {
                        e.target.parentElement.submit();
                    })
                }
            })
        }
    </script>
}
