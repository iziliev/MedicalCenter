@model ShowAllDoctorViewModel


@section Styles {
<link href="~/font-awesome/css/all.min.css" rel="stylesheet" asp-append-version="true" />
<link href="~/css/adminlte.css" rel="stylesheet" asp-append-version="true" />
<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&amp;display=fallback">
}

<div class="offset-lg-4 offset-sm-4 col-lg-4 col-sm-4">
    <div class="small-box bg-warning" style="height:100px;">
        <div class="row">
            <div class="col-6">
                <div class="inner">
                    <h3 class="text-center" style="padding-top:10px;">@Model.CountDoctor</h3>
                    <p class="text-center" style="font-weight:bold">@ViewData["Title"]</p>
                </div>
            </div>
            <div class="col-6" style="position:center;padding-top:15px;">
                <div class="icon">
                    <i class="fa fa-user-doctor"></i>
                </div>
            </div>
        </div>
        
       
    </div>
</div>

<table class="table table table-bordered">
    <thead style="background-color:#e6e6e6">
        <tr>
            <th scope="col" class="text-center">Име на доктор</th>
            <th scope="col" class="text-center">Специалност</th>
            <th scope="col" class="text-center">Регистриран на</th>
            <th scope="col" class="text-center">Изтрит на</th>
            <th scope="col" class="text-center">Действие</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model.AllDoctors)
        {
            string date = @doctor.OutOnDate == null ? "Now" : @doctor.OutOnDate;
            <tr>
                <th scope="col" class="text-center">д-р @doctor.FirstName @doctor.LastName</th>
                <th scope="col" class="text-center">@doctor.SpecialityName</th>
                <th scope="col">@doctor.JoinOnDate</th>
                <th scope="col">@doctor.OutOnDate</th>
               
                <th scope="col" class="text-center">
                    <form asp-controller="Administrator" asp-action="ReturnDoctor" asp-route-id="@doctor.Id">
                        <input type="submit" value="Възтанови" class="btn btn-success" onclick="myConfirm(event)" />
                    </form>
                </th>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function myConfirm(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Възтановяване на доктор?',
                text: "Възтановяване на правата на доктор",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Да, Възтановяване!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Възтановяване!',
                        'Възтановихте доктор',
                        'success'
                    ).then((resultDeleted) => {
                        e.target.parentElement.submit();
                    })
                }
            })
        }
    </script>
}
