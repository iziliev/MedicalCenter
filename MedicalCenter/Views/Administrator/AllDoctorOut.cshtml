@model ShowAllDoctorViewModel

<h3 class="display-4 text-center">@ViewData["Title"]: @Model.CountDoctor</h3> 
<hr />
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col" class="text-center">Име на доктор</th>
            <th scope="col" class="text-center">Специалност</th>
            <th scope="col" class="text-center">Регистриран на</th>
            <th scope="col" class="text-center">Изтрит на</th>
            <th scope="col" class="text-center">Действие</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model.AllDoctors)
        {
            string date = @doctor.OutOnDate == null ? "Now" : @doctor.OutOnDate;
            <tr>
                <th scope="col" class="text-center">д-р @doctor.FirstName @doctor.LastName</th>
                <th scope="col" class="text-center">@doctor.SpecialityName</th>
                <th scope="col" class="text-center">@doctor.JoinOnDate</th>
                <th scope="col" class="text-center">@doctor.OutOnDate</th>
               
                <th scope="col" class="text-center">
                    <form asp-controller="Administrator" asp-action="ReturnDoctor" asp-route-id="@doctor.Id">
                        <input type="submit" value="Възтанови" class="btn btn-outline-danger" onclick="myConfirm(event)" />
                    </form>
                </th>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function myConfirm(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Възтановяване на доктор?',
                text: "Възтановяване на правата на доктор",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Да, Възтановяване!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Възтановяване!',
                        'Възтановихте доктор',
                        'success'
                    ).then((resultDeleted) => {
                        e.target.parentElement.submit();
                    })
                }
            })
        }
    </script>
}
