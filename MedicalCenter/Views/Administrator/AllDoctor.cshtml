@model ShowAllDoctorViewModel

<h3 class="display-4 text-center">@ViewData["Title"]: @Model.CountDoctor</h3> 
<hr />
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col" class="text-center">Име на доктор</th>
            <th scope="col" class="text-center">Специалност</th>
            <th scope="col" class="text-center">Телефон</th>

            <th scope="col" class="text-center">Регистриран на</th>
            <th scope="col" colspan="2" class="text-center">Действия </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model.AllDoctors)
        {
            string date = @doctor.OutOnDate == null ? "Now" : @doctor.OutOnDate;
            <tr>
                <th scope="col" class="text-center">д-р @doctor.FirstName @doctor.LastName</th>
                <th scope="col" class="text-center">@doctor.SpecialityName</th>
                <th scope="col" class="text-center">@doctor.PhoneNumber</th>

                <th scope="col" class="text-center">@doctor.JoinOnDate</th>
                <th scope="col" class="text-center">
                    <form asp-controller="Administrator" asp-action="EditDoctor" method="get">
                        <input name="id" type="hidden" value="@doctor.Id">
                        <button type="submit" class="btn btn-outline-warning">Редакция</button>
                    </form>
                </th>
                <th scope="col" class="text-center">
                    <form asp-controller="Administrator" asp-action="DeleteDoctor" asp-route-id="@doctor.Id">
                        <input type="submit" value="Изтриване" class="btn btn-outline-danger" onclick="myConfirm(event)" />
                    </form>
                </th>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function myConfirm(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Желаете ли да изтриете доктор?',
                text: "Действието може да бъде върнато",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Да, изтрий!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Изтрит!',
                        'Изтрихте доктор.',
                        'success'
                    ).then((resultDeleted) => {
                        e.target.parentElement.submit();
                    })
                }
            })
        }
    </script>
}
